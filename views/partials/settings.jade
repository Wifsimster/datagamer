div(ng-controller="SettingsCtrl")
    .grid__col4
        div#General(class="card")
            div(class="p+")
                strong.fs-headline.display-block General
                strong.fs-subhead.tc-black-2.display-block Need restart before changes take effect.
                .grid__col5
                    lx-text-field(label="Username")
                        input(type="text", ng-model="settings.username", ng-change="update(settings)")
                .grid__col5
                    lx-text-field(label="Password")
                        input(type="text", ng-model="settings.password", ng-change="update(settings)")
                .grid__col2
                    lx-text-field(label="Port")
                        input(type="text", ng-model="settings.port", ng-change="update(settings)")

        div(style="padding:15px")

        div#Advanced(class="card")
            div(class="p+")
                strong.fs-headline.display-block Advanced
                strong.fs-subhead.tc-black-2.display-block Need restart before changes take effect.
                lx-text-field(label="API Key", disabled="true")
                    input(type="text", ng-model="settings.apikey", ng-change="update(settings)", ng-disabled="true")
                div.checkbox.mt
                    input.checkbox__input(type="checkbox", id="debug", ng-model="settings.debug", ng-change="update(settings)")
                    label.checkbox__label(for="debug") Debug
                    span.checkbox__help Check for generate a debug file
                lx-file-input(label="Select a directory...", ng-model="settings.debug_directory", ng-change="update(settings)")

        div(style="padding:15px")

        div#Update(class="card")
            div(class="p+")
                strong.fs-headline.display-block Update
                strong.fs-subhead.tc-black-2.display-block Need restart before changes take effect.
                div.checkbox.mt
                    input.checkbox__input(type="checkbox", id="notification", ng-model="settings.notification", ng-change="update(settings)")
                    label.checkbox__label(for="notification") Notification
                    span.checkbox__help Send a notification if an update is available
                div.checkbox.mt
                    input.checkbox__input(type="checkbox", id="automatic", ng-model="settings.automatic", ng-change="update(settings)")
                    label.checkbox__label(for="automatic") Automatic
                    span.checkbox__help Automatically update when update is available

        div(style="padding:15px")

        div#Search(class="card")
            div(class="p+")
                strong.fs-headline.display-block Video game search
                strong.fs-subhead.tc-black-2.display-block Search options for video games

                div.checkbox.mt
                    input.checkbox__input(type="checkbox", id="new_releases", ng-model="settings.new_releases", ng-change="update(settings)")
                    label.checkbox__label(for="new_releases") Search for new releases
                    span.checkbox__help Search for new video game releases.
                .checkbox.mt
                    input.checkbox__input(type="checkbox", id="startup", ng-model="settings.startup", ng-change="update(settings)")
                    label.checkbox__label(for="startup") Run on startup
                    span.checkbox__help Force to search for new video game releases after start.

                // CRON
                .grid__col4
                    lx-text-field(label="Day", lx-tooltip="* Every day | */4 fourth day of the month", tooltip-position="bottom")
                        input(type="text" ng-model="settings.cron.day", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Hour", lx-tooltip="* Every hour | */2 Every two hours", tooltip-position="bottom")
                        input(type="text" ng-model="settings.cron.hour", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Minute", lx-tooltip="Better keep it random, so the providers don't get DDOSed by every Datagamer user on a 'full' hour.",
                    tooltip-position="bottom")
                        input(type="text" ng-model="settings.cron.minute", ng-change="update(settings)")

        div(style="padding:15px")

        div#Providers(class="card")
            div(class="p+")
                button.btn.btn--m.btn--black.btn--raised(lx-ripple, style="float:right") Test
                strong.fs-headline.display-block ThePirateBay providers
                a.fs-subhead.tc-black-2.display-block(ng-href="https://thepiratebay.se/") ThePirateBay
                strong.fs-subhead.tc-black-2.display-block Providers searching torrents for new releases

                lx-text-field(label="Proxy server", lx-tooltip="Domain for requests, keep empty to let Datagamer pick.", tooltip-position="bottom")
                    input(type="text" ng-model="settings.tpb.proxy", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Seed ratio", lx-tooltip="Will not be removed until this seed ratio is met.", tooltip-position="bottom")
                        input(type="text" ng-model="settings.tpb.seed_ratio", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Seed time", lx-tooltip="Will not be removed until this seed time is met.", tooltip-position="bottom")
                        input(type="text" ng-model="settings.tpb.seed_time", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Min score", lx-tooltip="Search releases with a minimum score.", tooltip-position="bottom")
                        input(type="text" ng-model="settings.tpb.min_score", ng-change="update(settings)")

        div(style="padding:15px")

        div(class="card")
            div(class="p+")
                button.btn.btn--m.btn--orange.btn--raised(lx-ripple, style="float:right") Test
                strong.fs-headline.display-block KickAssTorrents providers
                a.fs-subhead.tc-black-2.display-block(ng-href="https://kickass.so/") KickAssTorrents
                strong.fs-subhead.tc-black-2.display-block Providers searching torrents for new releases

                lx-text-field(label="Proxy server", lx-tooltip="Domain for requests, keep empty to let Datagamer pick.", tooltip-position="bottom")
                    input(type="text" ng-model="settings.kickass.proxy", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Seed ratio", lx-tooltip="Will not be removed until this seed ratio is met.", tooltip-position="bottom")
                        input(type="text" ng-model="settings.kickass.seed_ratio", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Seed time", lx-tooltip="Will not be removed until this seed time is met.", tooltip-position="bottom")
                        input(type="text" ng-model="settings.kickass.seed_time", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Min score", lx-tooltip="Search releases with a minimum score.", tooltip-position="bottom")
                        input(type="text" ng-model="settings.kickass.min_score", ng-change="update(settings)")
            div(class="p+")
                .grid__col12
                    div.checkbox.mt
                        input.checkbox__input(type="checkbox", id="verified")
                        label.checkbox__label(for="verified") Only verified
                        span.checkbox__help Only search for verfied video game releases.

        div(style="padding:15px")

        div#Transmission(class="card")
            div(class="p+")
                button.btn.btn--m.btn--red.btn--raised(lx-ripple, style="float:right", ng-click="transmission_test()") Test
                strong.fs-headline.display-block Transmission
                a.fs-subhead.tc-black-2.display-block(ng-href="https://www.transmissionbt.com/") Transmission
                strong.fs-subhead.tc-black-2.display-block BitTorrent client for downloading torrents
            .grid
                #transmission_progress
            div(class="p+")
                .grid__col8
                    lx-text-field(label="Address", lx-tooltip="Address, usually localhost", tooltip-position="bottom")
                        input(type="text", ng-model="settings.transmission.address", ng-change="update(settings)")
                .grid__col4
                    lx-text-field(label="Port", lx-tooltip="Port, usually 9091", tooltip-position="bottom")
                        input(type="text", ng-model="settings.transmission.port", ng-change="update(settings)")
            div(class="p+")
                .grid__col12
                    lx-text-field(label="Rpc url", lx-tooltip="Change if you don't run Transmission RPC at the default url.", tooltip-position="bottom")
                        input(type="text", ng-model="settings.transmission.rpc_url", ng-change="update(settings)")

                .grid__col6
                    lx-text-field(label="Username")
                        input(type="text", ng-model="settings.transmission.username", ng-change="update(settings)")
                .grid__col6
                    lx-text-field(label="Password")
                        input(type="text", ng-model="settings.transmission.password", ng-change="update(settings)")
            div(class="p+")
                .grid__col12
                    lx-file-input(label="Select a directory...", ng-model="settings.transmission.directory",
                    ng-change="update(settings)", lx-tooltip="Download to this directory, Keep empty for default Transmission directory.", tooltip-position="bottom")

                    div.checkbox.mt
                        input.checkbox__input(type="checkbox", id="remove_torrent", ng-model="settings.transmission.remove_torrent", ng-change="update(settings)")
                        label.checkbox__label(for="remove_torrent") Remove torrent
                        span.checkbox__help Remove the torrent from Transmission after it finished seeding.
                    div.checkbox.mt
                        input.checkbox__input(type="checkbox", id="pause_torrent", ng-model="settings.transmission.pause_torrent", ng-change="update(settings)")
                        label.checkbox__label(for="pause_torrent") Paused torrent
                        span.checkbox__help Add the torrent paused.

        div(style="padding:15px")

        div#Renamer(class="card")
            div(class="p+")
                strong.fs-headline.display-block Renamer
                strong.fs-subhead.tc-black-2.display-block Renamer downloaded video games

                lx-file-input(label="From a directory...", ng-model="settings.renamer.from",
                ng-change="update(settings)", lx-tooltip="Folder where Datagamer searches for video games.", tooltip-position="bottom")
                lx-file-input(label="To a directory...", ng-model="settings.renamer.to",
                ng-change="update(settings)", lx-tooltip="Folder where the video games are moveed to.", tooltip-position="bottom")

                .grid__col6
                    lx-text-field(label="Folder naming", disabled="true")
                        input(type="text", ng-model="settings.renamer.folder_naming", ng-disabled="true")
                .grid__col6
                    lx-text-field(label="Run every")
                        input(type="text", ng-model="settings.renamer.detect_minute", ng-change="update(settings)",
                        lx-tooltip="Detect downloaded video games every X minutes.", tooltip-position="bottom")
                .grid__col12
                    div.checkbox.mt
                        input.checkbox__input(type="checkbox", id="unrar", ng-model="settings.renamer.unrar", ng-change="update(settings)")
                        label.checkbox__label(for="unrar") Unrar
                        span.checkbox__help Extract rar files if found.